<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/tvSecondActivity"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:textAlignment="center"
            android:background="@color/pink"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="@string/write_your_message" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/plain_text_here"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            android:textStyle="italic"
            tools:ignore="Autofill,VisualLintTextFieldSize" />


        <EditText
            android:id="@+id/etNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/write_numbers_here"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            android:textStyle="italic"
            tools:ignore="Autofill,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/etDecimals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/write_decimals_here"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            android:textStyle="italic"
            tools:ignore="Autofill,VisualLintTextFieldSize" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/choose"
            tools:ignore="UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cancel_button_color"
                android:text="@string/clear"
                tools:ignore="VisualLintButtonSize" />

            <Button
                android:id="@+id/btnBack"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/back_button_color"
                android:text="Back"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSendData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="25dp"
            android:text="@string/send_data"
            tools:ignore="VisualLintButtonSize" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/hello_kitty_second"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>